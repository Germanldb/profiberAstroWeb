---
// src/components/Footer.astro
import Image from "astro/components/Image.astro";
import logo from "../assets/logo.svg"; // Adjust the path to your logo image
import instagram from "../assets/icons/instagram.svg";
import facebook from "../assets/icons/facebook.svg";
---
<footer class="bg-[#14081b] text-[#b98cff]">
  <div class="max-w-7xl mx-auto px-6 py-12">
    <!-- Top row: logo | contact | socials -->
    <div class="flex flex-col md:flex-row items-center md:items-start justify-between gap-6 md:gap-0">
      <!-- Logo / brand -->
      <div class="flex-1 flex items-center md:justify-start justify-center">
        <a href="/" class="flex items-center gap-3 text-[#8F4DEF]">
          <!-- <span class="font-extrabold text-2xl tracking-tight">ProFiber</span> -->
          <Image src={logo} alt={"Logo de ProFiber"} class={'h-8 w-auto'} />

        </a>
      </div>

      <!-- Center: email -->
      <div class="flex-1 flex flex-col items-center">
        <div class="text-center">
          <div class="text-sm opacity-80">Email</div>
          <a href="mailto:profiberprllc@gmail.com" class="text-lg font-medium text-[#cfa3ff] hover:text-[#ffffff]">profiberprllc@gmail.com</a>
        </div>
      </div>

      <!-- Socials -->
      <div class="flex-1 flex items-center md:justify-end justify-center gap-4">
        <a href="https://www.instagram.com/profiberpr" target="_blank" class="w-9 h-9 rounded-full flex items-center justify-center text-white hover:scale-105 transition">
          <span class="sr-only">Instagram</span>
          <Image src={instagram} alt={"instagram-profiber"} class={'h-8 w-auto'} />
        </a>
        <a href="https://www.facebook.com/profile.php?id=61575690967358" target="_blank" class="w-9 h-9 rounded-full flex items-center justify-center text-white hover:scale-105 transition">
          <span class="sr-only">Facebook</span>
          <Image src={facebook} alt={"Facebook profiber"} class={'h-8 w-auto'} />

        </a>
        <!-- <a href="#" class="w-9 h-9 rounded-full bg-[#8F4DEF] flex items-center justify-center text-white hover:bg-[#A649FF] transition">
          <span class="sr-only">LinkedIn</span>
          IN
        </a>
        <a href="#" class="w-9 h-9 rounded-full bg-[#8F4DEF] flex items-center justify-center text-white hover:bg-[#A649FF] transition">
          <span class="sr-only">Telegram</span>
          TG
        </a> -->
      </div>
    </div>

    <!-- Divider -->
    <div class="border-t border-[#3a2640] my-8"></div>

    <!-- Bottom row: copyright centered -->
    <div class="text-center text-sm text-[#b99cff] opacity-90">
      <p>© Copywriting &nbsp; | &nbsp; Desarrollado por Devroom y Diseñado por Draft &nbsp; | &nbsp; <a href="#" class="hover:text-white">Terms of Use</a> &nbsp; | &nbsp; <a href="#" class="hover:text-white">Privacy</a></p>
    </div>
  </div>
</footer>
